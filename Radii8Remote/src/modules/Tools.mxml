<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  xmlns:controls="com.flexcapacitor.controls.*"
		  width="100%" height="100%" 
		  >
	
	<fx:Script>
		<![CDATA[
			import com.flexcapacitor.controller.Radiate;
			
			import mx.core.FlexGlobals;
			
			public function set targets(values:Array):void {
				
				for (var i:int;values.length;i++) {
					trace("tool = " + values[i]);
				}
			}
			
			public var radiate:Radiate;
			
			protected function image1_clickHandler(event:MouseEvent):void {
				Radiate.getInstance().setTarget(event.currentTarget);
			}
			
			protected function image2_clickHandler(event:MouseEvent):void {
				Radiate.setDocuments(FlexGlobals.topLevelApplication);
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:HGroup width="100%">
		<controls:ImageButton source="{Radii8LibraryAssets.applicationIcon}" click="image2_clickHandler(event)"/>
		<controls:ImageButton source="{Radii8LibraryAssets.arrow}" click="image1_clickHandler(event)"/>
	</s:HGroup>
	
</s:Module>
