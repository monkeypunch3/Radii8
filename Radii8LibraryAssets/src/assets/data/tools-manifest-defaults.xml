<?xml version="1.0"?>
<!--

    Tools
    
    Be sure to include a reference to the classes in RadiateReferences
    
    IF you change the name or class it may break calls made to look for "Selection", etc
    Be sure to search through the code or check radiate.getToolByName();
    
    The cursor is the name(s) of a static property of the embedded icon on the tool class
    
    You can embed the menu icon in the class: 
	
	private var _icon:Class = Radii8LibraryToolAssets.Text;
	
	public function get icon():Class {
		return _icon;
	}
-->
<toolsPackage>

    <tool id="Selection" 
    		class="com.flexcapacitor.tools.Selection" 
    		inspector="com.flexcapacitor.views.SelectionInspector" 
    		include="true"
    		key="v"/>
    		
    <tool id="Text" 
    		class="com.flexcapacitor.tools.Text" 
    		include="true"
    		key="t"/>
<!--     		inspector="com.flexcapacitor.views.TextInspector"  -->
    
    <tool id="Zoom" 
    		class="com.flexcapacitor.tools.Zoom" 
    		include="true"
    		key="z">
    		<cursors>
    			<cursor name="ZoomInCursor" x="10" y="10" />
    			<cursor name="ZoomOutCursor" x="10" y="10" />
    		</cursors>
    </tool>
<!--     		inspector="com.flexcapacitor.views.ZoomInspector"  -->
    
    <tool id="EyeDropper" 
    		class="com.flexcapacitor.tools.EyeDropper" 
    		inspector="com.flexcapacitor.views.EyeDropperInspector" 
    		include="true"
    		key="i">
    		<cursors>
    			<cursor name="Cursor" x="0" y="17" />
    		</cursors>
    </tool>
    
    <tool id="Hand" 
    		class="com.flexcapacitor.tools.Hand" 
    		include="true"
    		key="h">
    		<cursors>
    			<cursor name="HandOverCursor" x="0" y="0" />
    			<cursor name="HandGrabCursor" x="0" y="0" />
    		</cursors>
    </tool>
    
    <tool id="Marquee" 
    		class="com.flexcapacitor.tools.Marquee" 
    		inspector="com.flexcapacitor.views.MarqueeInspector" 
    		include="true"
    		key="m">
    </tool>

</toolsPackage>
