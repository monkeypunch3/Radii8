<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="200" height="100"
		 creationComplete="group1_creationCompleteHandler(event)">
	
	<fx:Script>
		<![CDATA[
			import com.flexcapacitor.controller.Radiate;
			
			import mx.events.FlexEvent;
			import mx.logging.AbstractTarget;
			
			private var radiate:Radiate;
			
			[Bindable]
			public var logTarget:AbstractTarget;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void {
				
				/*
				logTarget = new RadiateLogTarget();
				Radiate.setLoggingTarget(logTarget, null, consoleTextArea);
				*/
				
				logTarget = Radiate.logTarget;
				Radiate.setLoggingTarget(logTarget, null, consoleTextArea);
				
			}
			
			protected function clearTextAreaHandler(event:MouseEvent):void {
				consoleTextArea.text = "";
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" gap="2" height="100%">
		<s:Label text="Clear" 
				 typographicCase="uppercase" 
				 textAlign="center"
				 verticalAlign="middle"
				 fontWeight="bold"
				 backgroundAlpha=".75"
				 backgroundColor="#FFFFFF"
				 useHandCursor="true"
				 buttonMode="true"
				 fontSize="10"
				 click="clearTextAreaHandler(event)"
				 height="14"
				 />
		<s:TextArea id="consoleTextArea" width="100%" height="100%"
					tabFocusEnabled="false"
					fontSize="10"
					focusAlpha="0"/>
 	</s:VGroup>
</s:Group>
